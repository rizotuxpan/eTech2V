//---------------------------------------------------------------------------

#include <fmx.h>
#pragma hdrstop

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.fmx"
TFrame1 *Frame1;
//---------------------------------------------------------------------------
__fastcall TFrame1::TFrame1(TComponent* Owner)
	: TFrame(Owner)
{
}
//---------------------------------------------------------------------------


void __fastcall TFrame1::Panel2Resized(TObject *Sender)
{
	if (!resizing)  // Evitar bucle infinito
	{
		resizing = true;
		try
		{
			if (Frame1->Width < 750) {
				Frame1->Width = 750;
			}
		}
		__finally
		{
			resizing = false;
		}
	}
}
//---------------------------------------------------------------------------

