//---------------------------------------------------------------------------

#include <fmx.h>
#pragma hdrstop

#include "MainWindow.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.fmx"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------

void __fastcall TForm1::MenuCatalogosSwitchesMarcasClick(TObject *Sender)
{
    // Crea una instancia del frame
    TFrame1 *MyFrame = new TFrame1(this);

    // Configura el parent del frame al panel
    MyFrame->Parent = PanelMain;

    // Ajusta el tamaño y la posición del frame según tus necesidades
    MyFrame->Align = TAlignLayout::Client;

    // Muestra el frame
    MyFrame->Visible = true;
}
//---------------------------------------------------------------------------

void __fastcall TForm1::FormResize(TObject *Sender)
{
	int minWidth = 750; // Establece el ancho mínimo deseado
    int minHeight = 500; // Establece la altura mínima deseada

    if (Frame1->Width < minWidth)
        Frame1->Width = minWidth;

    if (Frame1->Height < minHeight)
		Frame1->Height = minHeight;
}
//---------------------------------------------------------------------------

