#include <fmx.h>
#pragma hdrstop

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.fmx"
TFrame1 *Frame1;
//---------------------------------------------------------------------------
__fastcall TFrame1::TFrame1(TComponent* Owner)
	: TFrame(Owner)
{
}
//---------------------------------------------------------------------------

void __fastcall TFrame1::Panel2Resize(TObject *Sender)
{
	if (Panel2->Width < 420) {
		Panel2->Width = 420;
        if (!resizing)  // Evitar bucle infinito
		{
			resizing = true;
			try
			{
				// Ajustar el tamaño del TFrame aquí
				Width = 750;  // Puedes establecer el ancho según tus necesidades
				Height = 600; // Puedes establecer la altura según tus necesidades
			}
			__finally
			{
				resizing = false;
			}
		}
	}
}
//---------------------------------------------------------------------------

