__fastcall TFrame1::TFrame1(TComponent* Owner)
	: TFrame(Owner)
{
}
//---------------------------------------------------------------------------







void __fastcall TFrame1::Panel2Resize(TObject *Sender)
{
	int minPanel2Width = 420; // Establece el ancho máximo deseado

	if (Panel2->Width < minPanel2Width)
	{
		Panel2->Width = minPanel2Width;
        Panel1->Width = 313;
	}
}
